<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:layout_margin="10dp"
    android:background="@color/Thistle"
    tools:context="com.example.mishr.locally.Home_Activity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/show_value"
        android:text="Show Data..!!"
        android:elevation="18dp"
        android:textAllCaps="false"
        android:textSize="22sp"
        android:layout_gravity="center"
        android:layout_margin="12dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name Here..!!"
        android:id="@+id/name_here"
        android:textSize="19sp"
        android:textColor="@color/Brown"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="City Here..!!"
        android:id="@+id/city_here"
        android:textColor="@color/Brown"
        android:textSize="19sp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E-mail Here..!!"
        android:id="@+id/email_here"
        android:textSize="19sp"
        android:textColor="@color/Brown"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Here..!!"
        android:id="@+id/contact_here"
        android:textSize="19sp"
        android:textColor="@color/Brown"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:layout_gravity="center_horizontal"
        android:layout_margin="15dp"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:id="@+id/clear_button"/>
  <!--  <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/number_here"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="call_at_this"
        android:id="@+id/calling_button"/> -->

</LinearLayout>
